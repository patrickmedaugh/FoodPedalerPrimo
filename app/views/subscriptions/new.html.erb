<h1 id=subscript_heading>Sign up for a subscription</h1>


<% @products.each do |product| %>
  <div class="product_tile">
    <img height=150 width=200 src="<%= product.image_url %>">
    <h4>
      <%= product.name %>
    </h4>
    </p>
    <p>
    <%= product.description %>
    </p>
    <div>
      <%= form_for @subscription do |f| %>
        <%= f.select :frequency, [['Choose a Subscription', 0], ['One Bag Weekly', 2], ['Two Bags Weekly', 3], ['One Bag Every Two Weeks', 1]] %>
    </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :product_id, :value => product.id %>

    <%= f.submit %>
  <% end %>
  </div>
<% end %>

